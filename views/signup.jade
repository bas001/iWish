extends layout

block content
    if error
        p(class='error') #{error}
    form(class='mui-form', action='/signup', method='post')
            fieldset(data-role='controlgroup')
                label username
                input(class='mui-input', id='username', value='', placeholder='any name', name='username')
                label password
                input(class='mui-input', id='password', value='', placeholder='any password', name='password')
            input(class='mui-btn mui-btn--large mui-btn--raised', type='submit', value='Sign Up', data-transition='fade', data-theme='c')
