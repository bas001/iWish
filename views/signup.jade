extends layout

block content
    if error
        p #{error}
    form(class='mui-form', action='/signup', method='post')
            fieldset(data-role='controlgroup')
                label username
                input(class='mui-input', id='username', value='', placeholder='your username', name='username')
                label password
                input(class='mui-input', id='password', value='', placeholder='your password', name='password')
            input(class='mui-btn', type='submit', value='Sign Up', data-transition='fade', data-theme='c')
