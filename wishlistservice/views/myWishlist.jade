extends layout

block content
    link(href='/stylesheets/toggle.css', rel='stylesheet')
    script(src="/javascripts/wishlistFunc.js")

    h2 My wishlist
    for item in wishes
        div(class='mui-row')
            p #{item.description}
            button(class='mui-btn', onclick="delete('#{item.uuid}')") delete
    form(class='mui-form', action="#{formAction}", method='post')
        div(class='mui-row')
            div(class="mui-col-md-2", data-role='fieldcontain')
                input(class='mui-input', id='description', value='', placeholder='What me wanth?', name='description')
            div(class="mui-col-md-2", data-role='fieldcontain')
                input(class='mui-btn', type='submit', value='add', data-transition='fade', data-theme='c')
