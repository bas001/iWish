extends layout

block content
    if error
        p(class='error') #{error}
    form(class='mui-form', action='/login', method='post')
        fieldset(data-role='controlgroup')
            input(class='mui-input', id='username', value='', placeholder='username', name='username')
            input(class='mui-input', id='password', value='', placeholder='password', name='password')
        input(class='waves-effect waves-light btn-large', type='submit', value='Log In', data-transition='fade', data-theme='c')
    div
        p
        span no account? !{' '}
        a(href='/signup') Sign Up
